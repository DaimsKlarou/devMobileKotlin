<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contact.ContactActivity" >

    <LinearLayout
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bleu_400">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="Btn retour"
            android:contextClickable="true"
            android:onClick="btnRetour"
            app:srcCompat="@drawable/ic_arrow_32"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playpensansregular"
            android:text="New Contacts"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/new_contact_image"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_add_photo_alternate_32"
        android:paddingVertical="15dp"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_btn"
            android:drawableStart="@drawable/ic_person_24"
            android:fontFamily="@font/playpensansregular"
            android:hint="Entrer votre nom"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="10sp"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp">


        <EditText
            android:id="@+id/Prenoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_btn"
            android:drawableStart="@drawable/ic_person_24"
            android:fontFamily="@font/playpensansregular"
            android:hint="Entrer votre prénom"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:padding="10sp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp">

        <EditText
            android:id="@+id/numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_btn"
            android:drawableStart="@drawable/ic_call_32"
            android:fontFamily="@font/playpensansregular"
            android:hint="Entrer votre numéro"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:padding="10sp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_btn"
            android:drawableStart="@drawable/ic_work_32"
            android:fontFamily="@font/playpensansregular"
            android:hint="Entrer votre profession"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="10sp"
            android:textSize="16dp"
            android:paddingStart="16dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnAnnuler"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:background="@drawable/btn_hover"
            android:drawableTint="#E6FFFFFF"
            android:text="@string/Annuler"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnValider"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_hover"
            android:text="@string/Valider"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>