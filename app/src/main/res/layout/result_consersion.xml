<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bleu_400"
        android:paddingTop="15sp"
        >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60sp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:contentDescription="Btn retour"
        android:contextClickable="true"
        android:focusable="true"
        android:onClick="btnRetour"
        app:srcCompat="@drawable/ic_arrow_32"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convertisseur"
        android:fontFamily="@font/playpensansregular"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:ignore="HardcodedText"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:fontFamily="@font/playpensansregular"
        android:gravity="center"
        android:text="Conversion de devises"
        android:textColor="@color/gray_dark_600"
        android:textSize="25dp"
        tools:ignore="HardcodedText"
        android:textStyle="bold"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loginImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_conversion_without_bg"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conversion de"
        android:textColor="@color/gray_dark_600"
        android:fontFamily="@font/playpensanslight"
        android:textStyle="bold"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginVertical="35sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="25sp"
        android:paddingHorizontal="15sp"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultat : "
            android:textColor="@color/gray_dark_600"
            android:fontFamily="@font/playpensanslight"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/resultat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_btn"
            android:hint="Verification"
            android:gravity="center"
            android:textSize="27sp"
            android:textColorHint="@color/gray_dark_300"
            android:fontFamily="@font/playpensansregular"
            android:textColor="@color/gray_dark_600"
            />

    </LinearLayout>


    <Button
        android:id="@+id/returnhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retourner a l'acceuil"
        android:background="@drawable/btn_hover"
        android:textColor="@color/white"
        android:fontFamily="@font/playpensansregular"
        android:layout_marginTop="35sp"
        />

</LinearLayout>