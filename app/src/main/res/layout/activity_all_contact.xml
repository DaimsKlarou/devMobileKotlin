<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contact.AllContact" >

    <LinearLayout
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bleu_400">

        <ImageView
            android:id="@+id/retourner"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="Btn retour"
            android:contextClickable="true"
            app:srcCompat="@drawable/ic_arrow_32"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playpensansregular"
            android:text="Contacts"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/addContact"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="Add contact"
            android:contextClickable="true"
            app:srcCompat="@drawable/ic_add_32"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="settings"
            app:srcCompat="@drawable/ic_settings_32"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_hover"
        android:drawableStart="@drawable/ic_person_search_32"
        android:fontFamily="@font/playpensansregular"
        android:inputType="text"
        android:paddingStart="25dp"
        android:hint="Search"
        android:textColorHint="@color/white"
        android:textSize="19dp"
        android:layout_marginHorizontal="25sp"
        android:paddingVertical="10dp"
        />



    <ListView
        android:id="@+id/listContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/contact_items"
        />
</LinearLayout>